<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:layout_weight="6"
        android:background="@drawable/ic_bkg_blue"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <com.ugt.premiumvpn.CustomTxTRegular
            android:textSize="18sp"
            android:textStyle="normal"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:id="@+id/name"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:text="Ultra Power Saving Mode"
            android:layout_height="?attr/actionBarSize" />

        <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_ultra_power_mode_rounded_bg">

            <com.hookedonplay.decoviewlib.DecoView
                android:id="@+id/dynamicArcView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true">

                <com.ugt.premiumvpn.CustomTxtSemibold
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_15sdp" />

                <com.ugt.premiumvpn.CustomTxtSemibold
                    android:id="@+id/addedtime"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="( +6h 30m)"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#4e5457"
                    android:textSize="@dimen/_12sdp" />

                <com.ugt.premiumvpn.CustomTxTRegular
                    android:id="@+id/addedtimedetail"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:text="@string/ext_battery"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/applied"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/ll_battery"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_apply_button"
            android:layout_width="180dp"
            android:layout_height="40dp">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="6"
        android:layout_marginTop="1dp"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp">

            <android.support.v7.widget.RecyclerView
                android:paddingTop="@dimen/_10sdp"
                android:foregroundGravity="center"
                android:id="@+id/recycler_view"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>