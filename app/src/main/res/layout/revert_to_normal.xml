<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <LinearLayout
        android:background="@drawable/ic_bkg_blue"
        android:layout_weight="6
"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.ugt.premiumvpn.CustomTxTRegular
            android:textSize="18sp"
            android:textStyle="normal"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:id="@+id/name"
            android:layout_marginTop="-40dp"
            android:layout_marginBottom="20dp"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:text="Normal Power Mode"
            android:layout_height="?attr/actionBarSize" />


        <RelativeLayout
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_marginTop="-10dp"
            android:background="@drawable/ic_normal_power_mode_rounded"
            android:gravity="center">

        <com.hookedonplay.decoviewlib.DecoView
            android:id="@+id/dynamicArcView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            wheel:dv_lineWidth="5dp"
            android:padding="8dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-6dp"/>

            <com.ugt.premiumvpn.CustomTxTRegular
                android:id="@+id/completion"
                android:textColor="#FFFFFF"
                android:text="25%"
                android:layout_centerInParent="true"
                android:textSize="@dimen/_25sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="6"
        android:layout_marginTop="1dp"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:weightSum="20"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_grey_dot"
                android:id="@+id/istpic"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        <com.ugt.premiumvpn.CustomTxTRegular
            android:gravity="center|left"
            android:id="@+id/ist"
            android:text="Reverting Brightness from 80% to Normal"
            android:textColor="@color/colorlightgrey"
            android:layout_weight="18.5"
            android:layout_width="0dp"
            android:textSize="@dimen/_12sdp"
            android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:id="@+id/view_one"
            android:background="@color/colorview"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:weightSum="20"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_grey_dot"
                android:id="@+id/secpic"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <com.ugt.premiumvpn.CustomTxTRegular
                android:gravity="center|left"
                android:id="@+id/sec"
                android:text="Reverting Device Performance to Normal"
                android:textColor="@color/colorlightgrey"
                android:layout_weight="18.5"
                android:layout_width="0dp"
                android:textSize="@dimen/_12sdp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:id="@+id/view_two"
            android:background="@color/colorview"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:weightSum="20"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_grey_dot"
                android:id="@+id/thipic"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <com.ugt.premiumvpn.CustomTxTRegular
                android:gravity="center|left"
                android:id="@+id/thi"
                android:text="Releasing Apps from Closing"
                android:textColor="@color/colorlightgrey"
                android:layout_weight="18.5"
                android:textSize="@dimen/_12sdp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:id="@+id/view_three"
            android:background="@color/colorview"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:weightSum="20"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_gravity="top"
               android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_grey_dot"
                android:id="@+id/foupic"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <com.ugt.premiumvpn.CustomTxTRegular
                android:gravity="center|left"
                android:id="@+id/fou"
                android:text="Releasing System Services."
                android:textColor="@color/colorlightgrey"
                android:layout_weight="18.5"
                android:textSize="@dimen/_12sdp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:id="@+id/view_four"
            android:background="@color/colorview"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <com.ugt.premiumvpn.CustomTxTRegular
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>