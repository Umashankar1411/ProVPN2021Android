<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_weight="6"
        android:background="@drawable/ic_bkg_blue"
        android:gravity="center"
        android:orientation="vertical">

        <com.ugt.premiumvpn.CustomTxTRegular
            android:textSize="18sp"
            android:textStyle="normal"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:id="@+id/name"
            android:layout_marginTop="-35dp"
            android:layout_marginBottom="20dp"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:text="Extreme Power Saving Mode"
            android:layout_height="?attr/actionBarSize" />

        <RelativeLayout
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_marginTop="-10dp"
            android:background="@drawable/ic_normal_power_mode_rounded"
            android:gravity="center">

            <com.hookedonplay.decoviewlib.DecoView
                android:id="@+id/dynamicArcView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                wheel:dv_lineWidth="5dp"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-6dp"/>

            <com.ugt.premiumvpn.CustomTxTRegular
                android:id="@+id/completion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="25%"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_25sdp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="6"
        android:layout_marginTop="10dp"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:weightSum="20"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_grey_dot"
                android:id="@+id/istpic"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


            <com.ugt.premiumvpn.CustomTxTRegular
                android:gravity="center|left"
                android:id="@+id/ist"
                android:text="Decreasing Brightness Upto 90%"
                android:textColor="@color/colorlightgrey"
                android:layout_weight="18.5"
                android:textSize="@dimen/_12sdp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:id="@+id/view_one"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorview"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:weightSum="20"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_grey_dot"
                android:id="@+id/secpic"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


            <com.ugt.premiumvpn.CustomTxTRegular
                android:gravity="center|left"
                android:id="@+id/sec"
                android:text="Decreasing Device Performance"
                android:textColor="@color/colorlightgrey"
                android:layout_weight="18.5"
                android:textSize="@dimen/_12sdp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:id="@+id/view_two"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorview"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:weightSum="20"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_grey_dot"
                android:id="@+id/thipic"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


            <com.ugt.premiumvpn.CustomTxTRegular
                android:gravity="center|left"
                android:id="@+id/thi"
                android:text="Closing Background Apps and Services"
                android:textColor="@color/colorlightgrey"
                android:layout_weight="18.5"
                android:textSize="@dimen/_12sdp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:id="@+id/view_three"
            android:background="@color/colorview"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:weightSum="20"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_gravity="top"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_grey_dot"
                android:id="@+id/foupic"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


            <com.ugt.premiumvpn.CustomTxTRegular
                android:gravity="center|left"
                android:id="@+id/fou"
                android:text="Locking Acess To Power Consuming Apps"
                android:textColor="@color/colorlightgrey"
                android:layout_weight="18.5"
                android:textSize="@dimen/_12sdp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>


        <View
            android:id="@+id/view_four"
            android:background="@color/colorview"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:weightSum="20"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_gravity="top"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_grey_dot"
                android:id="@+id/fifthpic"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


            <com.ugt.premiumvpn.CustomTxTRegular
                android:gravity="center|left"
                android:id="@+id/fif"
                android:text="Closing All Power Consuming Functions"
                android:textColor="@color/colorlightgrey"
                android:layout_weight="18.5"
                android:layout_width="0dp"

                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:id="@+id/view_five"
            android:background="@color/colorview"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>




    </LinearLayout>

</LinearLayout>